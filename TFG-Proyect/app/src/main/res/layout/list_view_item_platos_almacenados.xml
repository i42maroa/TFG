<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="7dp"
        >

        <ImageView
            android:id="@+id/listViewItemPlatoAlmacenadoImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="vertical">
            <TextView
                android:id="@+id/listViewItemPlatoAlmacenadoTextViewNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/listViewItemPlatoAlmacenadoTextViewFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="italic"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/listViewItemPlatoAlmacenadoTextViewRacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textAlignment="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/listViewItemPlatoAlmacenadoButtonMasRacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textColor="#FFFF"
                    android:text="+"
                    android:layout_marginRight="5dp"
                    />

                <Button
                    android:id="@+id/listViewItemPlatoAlmacenadoButtonMenosRacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="-"
                    android:textColor="#FFFF"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>