<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.PerfilUI.StorageFragment.ListPlatosAlmacenadosFragment">

  <ListView
      android:id="@+id/fragmentListaPlatosAlmacenadosListView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

  <TextView
      android:id="@+id/fragmentListPlatosAlmTextVacio"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="No hay platos almacenados"
      android:textStyle="italic"
      android:layout_gravity="center"
      android:visibility="gone"
      />


  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/fragmentListaPlatosAlmacenadosFloatingButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|end"
      android:layout_margin="5dp"
      app:fabSize="normal"
      app:layout_anchorGravity="top|end"
      app:layout_behavior="io.anycopy.googleplusdemo.BottomNavigationFABBehavior"
      app:srcCompat="@drawable/ic_add_white_24dp"
      app:useCompatPadding="true" />
</FrameLayout>