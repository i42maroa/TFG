<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="IMC"/>

        <TextView
            android:id="@+id/dialogInfoIMC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
         />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/dialogInfoBP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25" />
        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/dialogInfoPN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/dialogInfoSP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/dialogInfoOB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.25"
            android:src="@color/colorAccent"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.25"
            android:src="@color/colorFranjaVerde"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.25"
            android:src="@color/colorFranjaNaranja"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.25"
            android:src="@color/colorFranjaRojo"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="Infrapeso"
            android:layout_margin="5dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="Peso normal"
            android:layout_margin="5dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="Sobrepeso"
            android:layout_margin="5dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="Obesidad"
            android:layout_margin="5dp"
            android:textAlignment="center"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/colorPrimary"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/dialogInfInfoRango"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/dialogInfInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"/>



</LinearLayout>